{
	"extends": "@vue/tsconfig/tsconfig.web.json",
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
	"exclude": ["src/**/__tests__/*", "node_modules"],
	"compilerOptions": {
		"composite": true,
		"noImplicitAny": false, // 允许any
		"lib": ["ES2018", "DOM"],
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	}
}
